# CMS Frontend Environment Variables Template
# Copy this file to Projects/cms-frontend/.env.local and fill in your values
# DO NOT commit .env.local to Git

# Next.js Public Variables (KHÔNG hardcode)
# These are exposed to client-side
NEXT_PUBLIC_API_URL=http://localhost:3103/api
NEXT_PUBLIC_BACKEND_URL=http://localhost:3103

# Site Information (KHÔNG hardcode)
NEXT_PUBLIC_SITE_NAME=IPD8
NEXT_PUBLIC_SITE_DESCRIPTION=Hệ thống quản lý nội dung hiện đại
NEXT_PUBLIC_COMPANY_NAME=

# API Domains (KHÔNG hardcode)
NEXT_PUBLIC_API_DOMAIN=localhost:3103
NEXT_PUBLIC_ECOMMERCE_API_DOMAIN=

# NextAuth (KHÔNG hardcode secret)
NEXTAUTH_SECRET=your_nextauth_secret_here_change_in_production
NEXTAUTH_URL=http://localhost:3102

# JWT Secret for token verification in middleware
# MUST be the same as JWT_SECRET in cms-backend/.env.local
# This is safe because middleware runs server-side (Edge Runtime)
# DO NOT use NEXT_PUBLIC_ prefix - this would expose the secret to client
JWT_SECRET=your_jwt_secret_here_must_match_backend

# Environment
NODE_ENV=development


