# Public Frontend Environment Variables Template
# Copy this file to Projects/public-frontend/.env.local and fill in your values
# DO NOT commit .env.local to Git

# Next.js Public Variables (KHÔNG hardcode)
# These are exposed to client-side
# Public Frontend chỉ kết nối với Public Backend, không kết nối với CMS Backend
NEXT_PUBLIC_API_URL=http://localhost:3101/api
# Alternative: NEXT_PUBLIC_API_BASE_URL (both are supported)
# NEXT_PUBLIC_API_BASE_URL=http://localhost:3101/api
NEXT_PUBLIC_PUBLIC_BACKEND_URL=http://localhost:3101

# NextAuth (KHÔNG hardcode secret)
NEXTAUTH_SECRET=your_nextauth_secret_here_change_in_production
NEXTAUTH_URL=http://localhost:3100

# Environment
NODE_ENV=development


