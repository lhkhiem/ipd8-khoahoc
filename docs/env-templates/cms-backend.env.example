# CMS Backend Environment Variables Template
# Copy this file to Projects/cms-backend/.env.local and fill in your values
# DO NOT commit .env.local to Git

# Database (dùng chung với Public Backend - cùng ipd8_db_staging)
# Models code riêng biệt, không share với Public Backend
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ipd8_db_staging
DB_USER=ipd8_user
DB_PASSWORD=your_password_here

# JWT Authentication (KHÔNG hardcode secret)
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=7d

# API URLs (KHÔNG hardcode)
CMS_API_BASE_URL=http://localhost:3103/api
CMS_FRONTEND_URL=http://localhost:3102
PORT=3103

# Payment Gateways (KHÔNG hardcode keys)
ZALOPAY_APP_ID=your_zalopay_app_id
ZALOPAY_APP_SECRET=your_zalopay_secret
VNPAY_TMN_CODE=your_vnpay_tmn_code
VNPAY_SECRET_KEY=your_vnpay_secret_key
MOMO_PARTNER_CODE=your_momo_partner_code
MOMO_SECRET_KEY=your_momo_secret_key

# Email Configuration (KHÔNG hardcode credentials)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# Storage (Shared Storage ở root project)
SHARED_STORAGE_PATH=../../shared-storage
STORAGE_UPLOADS_PATH=${SHARED_STORAGE_PATH}/uploads
STORAGE_TEMP_PATH=${SHARED_STORAGE_PATH}/temp
STORAGE_PROVIDER=local

# Cloud Storage (optional - nếu dùng S3)
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_S3_BUCKET=your_bucket_name
AWS_REGION=ap-southeast-1

# CORS Configuration (comma-separated list)
CORS_ALLOWED_ORIGINS=http://localhost:3102,http://localhost:3102

# Site Information (KHÔNG hardcode)
SITE_NAME=IPD8
SITE_DESCRIPTION=Hệ thống quản lý nội dung hiện đại
SITE_URL=http://localhost:3100
WEBSITE_ORIGIN=http://localhost:3100
ADMIN_EMAIL=admin@example.com

# API Domains (KHÔNG hardcode)
API_DOMAIN=localhost:3103
ECOMMERCE_API_DOMAIN=
ADMIN_DOMAIN=localhost:3102

# Environment
NODE_ENV=development


